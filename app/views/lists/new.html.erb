<center>
	<div class="form_div">
		<h2>Add New List</h2>

		<%= form_for(@list, url: lists_path, :method => "post") do |f| %>

		  <div class="form_controls">
			<%= f.label :name %><br />
		  <%= f.text_field :name, autofocus: true %></div>

		  <div class="form_controls"><%= f.label :description %><br />
			<%= f.text_area :description, autocomplete: "off" %></div>


		  <div class="form_controls"><%= f.submit "Create" , :class=>"btn btn-success" %></div>
		<% end %>
	</div>
</center>
